{
  "author": "Zach Toben <zach.toben@gmail.com>",
  "description": "An app for viewing plex in a pop up window",
  "name": "plex-viewer",
  "license": "MIT",
  "version": "0.4.12",
  "private": true,
  "dependencies": {
    "ajv": "6.12.2",
    "electron-about-window": "1.13.2",
    "electron-debug": "3.0.1",
    "electron-is-dev": "1.2.0",
    "electron-platform": "1.2.0",
    "electron-store": "5.1.1",
    "electron-window-state": "5.0.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "snyk": "1.323.2"
  },
  "scripts": {
    "build": "react-scripts build",
    "dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000/ && electron .\"",
    "dist": "npm run build && electron-builder -mw",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "prepare": "npm run snyk-protect",
    "publish": "build",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "snyk-protect": "snyk protect"
  },
  "devDependencies": {
    "concurrently": "5.2.0",
    "cross-env": "7.0.2",
    "electron": "9.0.0",
    "electron-builder": "22.6.1",
    "react-scripts": "3.4.1",
    "typescript": "3.9.3",
    "wait-on": "5.0.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico",
      "publish": "github"
    },
    "mac": {
      "icon": "build/icon.ico",
      "publish": "github"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "snyk": true
}
