{
  "author": "Zach Toben <zach.toben@gmail.com>",
  "description": "An app for viewing plex in a pop up window",
  "name": "plex-viewer",
  "license": "MIT",
  "version": "0.4.13",
  "dependencies": {
    "ajv": "7.0.4",
    "electron-about-window": "1.13.4",
    "electron-debug": "3.2.0",
    "electron-is-dev": "1.2.0",
    "electron-platform": "1.2.0",
    "electron-store": "7.0.2",
    "electron-window-state": "5.0.3",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "scripts": {
    "build": "react-scripts build",
    "dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000/ && electron .\"",
    "dist": "npm run build && electron-builder -mw",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "publish": "build",
    "react-start": "cross-env BROWSER=none react-scripts start"
  },
  "devDependencies": {
    "concurrently": "5.3.0",
    "cross-env": "7.0.3",
    "electron": "11.2.3",
    "electron-builder": "22.9.1",
    "react-scripts": "4.0.2",
    "typescript": "4.1.5",
    "wait-on": "5.2.1"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico",
      "publish": "github"
    },
    "mac": {
      "icon": "build/icon.ico",
      "publish": "github"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
